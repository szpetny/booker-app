<% provide(:page_title, @user.name) %>
<div class="well">
<div class="page-header">
    <h2><%= titleize(t(:profile))%></h2>
</div>
<div class="row">
  <aside class="span4">
    <section style="margin: 0 10px">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<p id="notice"><%= notice %></p>

<p>
  <strong><%= titleize(t(:name))%>:</strong>
  <%= @user.name %>
</p>

<p>
  <strong><%= titleize(t(:surname))%>:</strong>
  <%= @user.surname %>
</p>

<p>
  <strong><%= titleize(t(:email))%>:</strong>
  <%= @user.email %>
</p>

<%= link_to link_to titleize(t(:edit)), edit_user_path(@user) %> |
<%= link_to link_to titleize(t(:back)), users_path %>
</div>
