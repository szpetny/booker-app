<% provide(:page_title, titleize(t(:sign_up))) %>
<div class="well">
	<div class="page-header">
		<h1><%= titleize(t(:sign_up))%></h1>
	</div>

	<div class="span6 offset3">
		<%= form_for(@user, :html => { :class => "form-horizontal"}) do |f| %>
		<%= render 'fields', f: f %>
		<br />
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= f.submit titleize(t(:create_account)), class: "btn btn-primary" %>
			</div>
		</div>

		<% end %>
	</div>
</div>
