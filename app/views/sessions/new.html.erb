<% provide(:page_title, titleize(t(:sign_in))) %>
<h1><%= titleize(t(:sign_in)) %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email, titleize(t(:email)) %>
      <%= f.text_field :email %>

      <%= f.label :password, titleize(t(:password)) %>
      <%= f.password_field :password %>

      <%= f.submit titleize(t(:sign_in)), class: "btn btn-large btn-primary" %>
    <% end %>

    <p><%= titleize(t(:new_user))%> <%= link_to titleize(t(:sign_up)), signup_path %></p>
  </div>
</div>