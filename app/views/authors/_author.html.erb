<li>
  <%= link_to author.surname_and_name, author %>
  <% if signed_in? && current_user.admin? %>
    | <%= link_to titleize(t(:edit)), edit_author_path(author) %>
    | <%= link_to titleize(t(:destroy)), author, method: :delete,
                                  data: { confirm: titleize(t(:are_you_sure)) } %>
  <% end %>
</li>