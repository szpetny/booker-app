<h1>Listing books</h1>

<table>
  <thead>
    <tr>
      <th>Isbn</th>
      <th>Title</th>
      <th>Author</th>
      <th>Language</th>
      <th>Description</th>
      <th>Photo</th>
      <th>Quantity</th>
      <th>Place</th>
      <th>Release date</th>
      <th>Pages</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.title %></td>
        <td><%= book.author_id %></td>
        <td><%= book.language %></td>
        <td><%= book.description %></td>
        <td><%= book.photo %></td>
        <td><%= book.quantity %></td>
        <td><%= book.place %></td>
        <td><%= book.release_date %></td>
        <td><%= book.pages %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

